{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Package",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}",
      "env": {
        "LIBRARY_PATH": "/opt/homebrew/lib",
        "CPATH": "/opt/homebrew/include"
      }
    },
    {
      "name": "Debug Go Tests",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "program": "${fileDirname}",
      "env": {
        "LIBRARY_PATH": "/opt/homebrew/lib",
        "CPATH": "/opt/homebrew/include"
      }
    },
    {
      "name": "Debug OCR Tool",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/ocr-tool",
      "args": [
        "--images",
        "images",
        "--output",
        "output",
        "--engine",
        "gosseract"
      ],
      "env": {
        "LIBRARY_PATH": "/opt/homebrew/lib",
        "CPATH": "/opt/homebrew/include",
        "DEBUG": "1"
      },
      "console": "externalTerminal",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Debug OCR Tool (Ollama)",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/ocr-tool",
      "args": [
        "--images",
        "images",
        "--output",
        "output",
        "--engine",
        "ollama"
      ],
      "env": {
        "LIBRARY_PATH": "/opt/homebrew/lib",
        "CPATH": "/opt/homebrew/include",
        "DEBUG": "1"
      },
      "console": "externalTerminal",
      "cwd": "${workspaceFolder}"
    }
  ]
}
